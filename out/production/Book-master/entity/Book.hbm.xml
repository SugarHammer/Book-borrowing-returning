<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="entity.Book" table="book">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		
		<property name="name" column="name" type="java.lang.String"></property>
		<property name="author" column="author" type="java.lang.String"></property>
		<property name="sale" column="sale" type="int"></property>
		<property name="context" column="context" type="java.lang.String"></property>
		<property name="type" column="type" type="java.lang.String"></property>
		<property name="num" column="num" type="int"></property>
		<property name="hot" column="hot" type="int"></property>
	</class>
</hibernate-mapping>