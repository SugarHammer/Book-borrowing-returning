<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="entity.User" table="user">
		<id name="uid" column="uid">
			<generator class="native"></generator>
		</id>
		
		<property name="username" column="username" type="java.lang.String"></property>
		<property name="password" column="password" type="java.lang.String"></property>
		<property name="auth" column="auth" type="int"></property>
		<property name="createDate" column="createDate" type="java.util.Date"></property>
		<property name="account" column="account" type="int"></property>
		<property name="uflag" column="uflag" type="java.lang.String"></property>
		<property name="bookquota" column="bookquota" type="int"></property>
		<property name="amountborrowed" column="amountborrowed" type="int"></property>
	</class>
</hibernate-mapping>